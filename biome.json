{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": []
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedImports": "error",
				"useImportExtensions": "off",
				"all": true
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"arrowParentheses": "always",
			"attributePosition": "multiline",
			"bracketSameLine": true,
			"bracketSpacing": true,
			"enabled": true,
			"indentStyle": "tab",
			"lineEnding": "lf",
			"lineWidth": 80,
			"quoteProperties": "preserve",
			"semicolons": "always",
			"trailingCommas": "all"
		}
	}
}